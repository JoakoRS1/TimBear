<body class="">
    <%- include('header-rol') %>
    <div class="card-body">
        <div class="container">
            
            <a class="link" href="/"> <-Regresar</a>
            <h1 class="">Historial de Apuestas</h1>

            <% if(apuestas.length >0 || partidas.length>0) {%>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Equipo A</th>
                        <th>Equipo B</th>
                        <th>Apuesta</th>
                        <th>Factor</th>
                        <th>Monto</th>
                        <th>Ganancia posible</th>
                        <th>Estado</th>
                        <th>Fecha</th>

                        
                    </tr>
                </thead>
                <tbody>
                    <% apuestas.forEach((apuesta) => { %>

                   
                        <tr>
                            <td><%= apuesta.equipoA %></td>
                            <td><%= apuesta.equipoB %></td>
                            <td><%= apuesta.equipoApostado %></td>
                            <td><%= apuesta.factorApostado %></td>
                            <td><%= apuesta.monto %></td>
                            <td><%= apuesta.gananciaPosible %></td>
                        </tr>
                            
    
                    <% }) %>
                 
                </tbody>
            </table>
            <% } else{ %>
            
            <h3>Vac√≠o</h3>

            <% } %>
        </div>

    </div>


    <%- include('footer')%>
</body>
