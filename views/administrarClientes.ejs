<!DOCTYPE html>
<html>
    <head>
        <title>Tim-Bear</title>
        <meta charset="utf-8" />
        <link rel="shortcut icon" href="/imagenes/logo.png" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    </head>
    <body class="">
        <%- include('header-rol') %>
        <h2 class="container">Administrar Clientes</h2>
        <div class="table-responsive container-fluid">
            <a class="link" href="/"> <-Regresar</a>

            <div class="input-group rounded mt-4 mx-4">
                <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                aria-describedby="search-addon" />
                <span class="input-group-text border-0" id="search-addon">
                  <i class="fas fa-search"></i><i class="fab fa-sistrix"></i>
                </span>
            </div>

            <table class="table container table-hover">
                <thead>
                    <tr>
                        <th>Id Cliente</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>DNI</th>
                        <th>Foto</th>
                        <th>Correo Electrónico</th>
                        <th>Número telefonico</th>
                        <th>Dirección</th>
                        <th>Distrito</th>
                        <th>Provincia</th>
                        <th>Departamento</th>
                        <th>PEP</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% clientes.forEach((cliente)=>{ %>
                        <% if(cliente.rol == "user"){%>
                        <tr>
                            <td><%=  %></td>
                            <td><%= cliente.nombre %></td>
                            <td><%= cliente.apellido %></td>
                            <td><%= cliente.DNI %></td>
                            <td><%= cliente.foto %></td>
                            <td><%= cliente.correo %></td>
                            <td><%= cliente.numero %></td>
                            <td><%= cliente.direccion %></td>
                            <td><%= cliente.distrito %></td>
                            <td><%= cliente.provincia %></td>
                            <td><%= cliente.departamento %></td>
                            <td><%= cliente.PEP %></td>
                            <td><%= cliente.estado  %></td>

                            <td>
                                <button type="button" class="mt-1 mx-1 btn btn-primary" data-bs-toggle="modal" data-bs-target="#editar">Editar</button>
                                <div class="modal fade" id="editar" tabindex="-1" aria-hidden="true" aria-labelledby="modalTitle">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form class="form" method="post" action="/AdministrarClientes/editar">
                                                <input type="hidden" name="cliente_id" value="<%= cliente.id %>"> 
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="exampleModalLabel" >Editar Cliente</h4>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"class="btn-close" aria-hidden="true" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row">
                                                        <div class="col">
                                                            <div class="form-group ">
                                                                <div class="form-group">
                                                                    <label class="form-label">Nombre Completo:</label>
                                                                    <label class="form-label" ><%= cliente.nombre%> <%= cliente.apellido%></label>
                                                                </div>                                                                
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">DNI:</label>
                                                                <label class="form-label" ><%= cliente.DNI%></label>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Foto:</label>
                                                                <label class="form-label" ><%= cliente.foto%></label>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Correo electrónico:</label>
                                                                <label class="form-label" ><%= cliente.correo%></label>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Número telefonico:</label>
                                                                <label class="form-label" ><%= cliente.numero%></label>
                                                            </div>

                                                            <div class="form-group mt-3">
                                                                <label  for="input_starttime" class="form-label">Estado:</label>
                                                                <select name="cliente_Estado2" class="form-select ">
                                                                    <option >---Seleccione---</option>
                                                                    <option>Pendiente de Validación</option>
                                                                    <option>Validado</option>
                                                                    <option>Dado de Baja</option>
                                                                </select>
                                                            </div>   
                                                            <div class="form-group">
                                                                <label class="form-label">Dirección:</label>
                                                                <label class="form-label" ><%= cliente.direccion%></label>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Distrito:</label>
                                                                <label class="form-label" ><%= cliente.distrito%></label>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Provincia:</label>
                                                                <label class="form-label" ><%= cliente.provincia%></label>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label">Departamento:</label>
                                                                <label class="form-label" ><%= cliente.departamento%></label>
                                                            </div>                                                        
                                                            <div class="form-group mt-3">
                                                                <label class="form-label">PEP:</label>
                                                                <label class="form-label" ><%= cliente.PEP%></label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">   
                                                        <button type="submit" class="btn btn-primary">Guardar</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <a class="btn btn-primary mx-1 mt-1" href="/AdministrarClientes/eliminar/<%=cliente.id%>">Eliminar</a>

                            </td>
                        </tr>
                    <%} })%>
                </tbody>
            </table>
        </div>
        
        <%- include('footer')%>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>

    </body>
</html>