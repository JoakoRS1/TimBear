<!DOCTYPE html>
<html>
    <head>
        <title>Tim-Bear - Partidas</title>
        <meta charset="utf-8" />
        <link rel="shortcut icon" href="/imagenes/logo.png" />
        <link rel="stylesheet" href="/css/index.css" type="text/css"> 
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>
    <body class="">
        <%- include('header-rol') %>
        <h1 class="m-lg-3">Partidas</h1>
        <div class="card-body">
            <a class="link" href="/"> <-Regresar</a>
            <!-- Banner -->
            <%- include('banner') %>
            <div class="m-md-5">
            <% if(juegos.length>1){ 
                 juegos.forEach( (juego) => { %><a href="/partidas/<%=juego.id %>" ><%= juego.nombre %> |</a><% }) %>
            <% } else { %>
                <a class="link" href="/partidas"><- Regresar a Partidas</a>
                <h2> Partidas de <%= juegos.nombre %> </h2>
            <% } %>
            </div>
            <div class="container">
                <% if(partidas.length > 0){ %> 
                <table class="table table-responsive-md table-hover">
                    <thead>
                        <tr>
                            <th>Partida</th>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th>Duraci√≥n</th>
                            <th class="text-center" colspan="3" >Ganador del Partido</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% partidas.forEach( (partida) => { %>
                            <tr>
                                <td><%= partida.equipoA %> vs. <%= partida.equipoB %></td>
                                <td><%= partida.fecha.toISOString().substring(0,10) %></td>
                                <td><%= partida.hora.toLocaleTimeString('en', {
                                    timeStyle: 'short',
                                    hour12: true
                                 }); %></td>
                                <td><%= partida.duracion.toLocaleTimeString('en', {
                                    timeStyle: 'short',
                                    hour12: false
                                 }); %> h</td>
                                <td><%= partida.equipoA %> <%= partida.factorA %></td>
                                <td>Empate <%= partida.factorEmpate %></td>
                                <td><%= partida.equipoB %> <%= partida.factorB %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                    <p>No hay partidas disponibles aun.</p>
                <% } %>
            </div>
        </div>

        <%- include('footer')%>
    </body>
</html>